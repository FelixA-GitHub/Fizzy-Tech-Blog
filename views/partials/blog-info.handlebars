<article class="blog">
  <div class="title">
    <a href="{{blog_url}}" target="_blank">{{title}}</a>
    <span>({{format_url blog_url}})</span>
  </div>
  <div class="meta">
    {{vote_count}} {{format_plural "blog" vote_count}} by {{user.username}} on {{format_date created_at}}
    |
    <a href="/blog/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
  </div>
</article>